package br.com.eliel.controller;

import java.math.BigDecimal;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import br.com.eliel.model.Cambio;

@RestController
@RequestMapping("/cambio-service")
public class CambioController {

	//http://localhost:8000/cambio-service/5/USD/BRL
	
	@GetMapping(value = "5/USD/BRL")
	public Cambio getCambio(@PathVariable("amount") BigDecimal amount, @PathVariable("from") String from, @PathVariable("to") String to) {
		return new Cambio();
	}
}
